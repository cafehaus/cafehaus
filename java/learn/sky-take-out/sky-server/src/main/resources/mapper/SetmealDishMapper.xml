<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <select id="querySetmealIdByDishIds" resultType="java.lang.Long">
        select * from setmeal_dish where dish_id in
        <foreach collection="dishIds" item="dishId" separator="," open="(" close=")">
            #{dishId}
        </foreach>
    </select>

    <insert id="addBatch">
        insert into setmeal_dish
        (name, setmeal_id, dish_id, price, copies)
        values
        <foreach collection="setmealDishs" item="sd" separator=",">
            (#{sd.name}, #{sd.setmealId}, #{sd.dishId} ,#{sd.price}, #{sd.copies})
        </foreach>
    </insert>
</mapper>